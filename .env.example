# ==============================================================================
# Block Style CMS Environment Configuration
# ==============================================================================
# Copy this file to .env.example and fill in your actual values
# DO NOT commit .env.example to version control
#
# For production deployment, copy to .env.production
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------

# Data Directory (CRITICAL SETTING)
# All articles, images, videos, and files are stored under this directory
# Ensure this path exists and has proper read/write permissions
# Example: /var/www/block-style-cms/data (Linux) or C:\data\block-style-cms (Windows)
APPLICATION_DATA_PATH=/path/to/your/data/directory

# ------------------------------------------------------------------------------
# Public API Endpoints (Client-side accessible)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Base API URL for server-side requests
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Media file base URLs (adjust for your CDN or domain in production)
NEXT_PUBLIC_IMAGE_BASE_URL=http://localhost:3000/images
NEXT_PUBLIC_VIDEO_BASE_URL=http://localhost:3000/videos
NEXT_PUBLIC_AUDIO_BASE_URL=http://localhost:3000/audios
NEXT_PUBLIC_FILE_BASE_URL=http://localhost:3000/files

# ------------------------------------------------------------------------------
# AI Services Configuration
# ------------------------------------------------------------------------------

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
# Use official OpenAI API or compatible endpoints
OPENAI_BASE_URL=https://api.openai.com/v1
# Supported models: gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.
OPENAI_MODEL=gpt-4.1-nano

# Google Gemini Configuration
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_API_KEY=your_gemini_api_key_here
# Supported models: gemini-pro, gemini-pro-vision, gemini-1.5-pro, etc.
GEMINI_MODEL=gemini-2.0-flash

# ------------------------------------------------------------------------------
# External Services
# ------------------------------------------------------------------------------

# Pexels API for stock photos
# Get your API key from https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Contact Email (displayed in error pages)
# Use # instead of @ to prevent spam (will be converted in the app)
NEXT_PUBLIC_CONTACT_EMAIL="your_email#domain.com"

# ------------------------------------------------------------------------------
# Authentication Configuration (Better Auth)
# ------------------------------------------------------------------------------

# Better Auth Secret (REQUIRED)
# Generate a secure random string (32+ characters)
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secure_random_secret_key_here

# Better Auth Base URL
# For development: http://localhost:3000
# For production: https://your-domain.com
BETTER_AUTH_URL=http://localhost:3000

# Allowed Admin Emails (comma-separated)
# Only these emails can access the admin panel
BETTER_AUTH_ALLOWED_EMAILS=admin@yourdomain.com,editor@yourdomain.com

# ------------------------------------------------------------------------------
# GitHub OAuth Configuration
# ------------------------------------------------------------------------------
# Create a GitHub OAuth App at https://github.com/settings/developers
# Authorization callback URL: {BETTER_AUTH_URL}/auth/callback/github

BETTER_AUTH_GITHUB_CLIENT_ID=your_github_client_id
BETTER_AUTH_GITHUB_CLIENT_SECRET=your_github_client_secret

# ------------------------------------------------------------------------------
# Google OAuth Configuration  
# ------------------------------------------------------------------------------
# Create a Google OAuth App at https://console.developers.google.com/
# Authorized redirect URIs: {BETTER_AUTH_URL}/auth/callback/google

BETTER_AUTH_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
BETTER_AUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret